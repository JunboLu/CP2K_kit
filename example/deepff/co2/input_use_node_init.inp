&global
  run_type        deepff
&end global

&deepff
  &deepmd
    &model
      type_map C O
      &descriptor
        type se_a
        sel 8 16
        rcut_smth 5.80
        rcut 6.00
        neuron 10 20 40
        axis_neuron 12
      &end descriptor
    &end model
    &learning_rate
      type exp
      decay_steps 5000
      start_lr 0.001
      stop_lr 3.51e-8
    &end learning_rate
    &loss
      start_pref_e 0.02
      limit_pref_e 1
      start_pref_f 1000
      limit_pref_f 1
      start_pref_v 0
      limit_pref_v 0
    &end loss
    &training
ã€€    &system
        directory ./cp2k_md
        proj_name cp2k
        start_frame 0
        end_frame 200
        choosed_frame_num 100
        set_parts 1
      &end system
      train_stress false
      model_type use_node
      neuron 120 120 120 ... 180 180 180
      stop_batch 40000
      batch_size auto
      disp_freq 100
      numb_test 5
      save_freq 1000
    &end training
  &end deepmd

  &lammps
    nsteps 1000
    write_restart_freq 10
    model_devi_freq 10
    time_step 0.0005
    temp 50.0
    pres 1.0
    tau_t 0.1
    tau_p 0.5
    &system
      box ./lmp_init_data/box
      coord ./lmp_init_data/str.inc
      md_type nvt
    &end system
  &end lammps

  &model_devi
    choose_new_data_num_limit 100
    conv_new_data_num 5
    force_conv 0.01
    max_iter 100
    restart_iter 0
  &end model_devi

  &cp2k
    basis_set_file_name /home/lujunbo/bin/cp2k-8.2/data/BASIS_MOLOPT
    basis_level dzvp
    use_sr_basis False
    potential_file_name /home/lujunbo/bin/cp2k-8.2/data/POTENTIAL
    cell_periodic xyz
    poisson_periodic xyz
    use_prev_wfn false
    charge 0
    multiplicity 1
    cutoff 300
    xc_functional PBE
    dftd3 True
    dftd3_file /home/lujunbo/bin/cp2k-8.2/data/dftd3.dat
  &end cp2k

  &environ
    cp2k_exe /home/lujunbo/bin/cp2k-8.2/exe/local/cp2k.popt
    cp2k_env_file /home/lujunbo/bin/cp2k-8.2/tools/toolchain/install/setup
    cuda_dir none
    parallel_exe /home/lujunbo/bin/parallel/bin/parallel
    lmp_mpi_num 4
    lmp_openmp_num 2
    cp2k_job_num 2
  &end environ
&end deepff
