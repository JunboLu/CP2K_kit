&Global
  PRINT_LEVEL LOW
  PROJECT_NAME cp2k
  RUN_TYPE MD
&END Global

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 200
    TIMESTEP 0.5
    TEMPERATURE 50.0
    &THERMOSTAT
      TYPE NOSE
      REGION GLOBAL
      &NOSE
        LENGTH 3
        TIMECON [wavenumber_t] 1000
      &END NOSE
    &END THERMOSTAT
  &END MD
  &PRINT
    &TRAJECTORY
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &VELOCITIES
      &EACH
        MD 1
      &END EACH
    &END VELOCITIES
    &FORCES
      &EACH
       MD 1
      &END EACH
    &END FORCES
    &CELL
      &EACH
       MD 1
      &END EACH
    &END CELL
    &STRESS
      &EACH
       MD 1
      &END EACH
    &END STRESS
    &RESTART_HISTORY
      &EACH
        MD 50
      &END EACH
    &END RESTART_HISTORY
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME /home/lujunbo/bin/cp2k/cp2k-6.1.0/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /home/lujunbo/bin/cp2k/cp2k-6.1.0/data/POTENTIAL
    WFN_RESTART_FILE_NAME ./cp2k-RESTART.wfn
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
      CUTOFF 280
      NGRIDS 4
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
      EXTRAPOLATION ASPC
    &END QS
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      MAX_SCF 100
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      CHOLESKY INVERSE_DBCSR
      &OUTER_SCF
        MAX_SCF 6
        EPS_SCF 1.0E-6
      &END OUTER_SCF
      &OT
        MINIMIZER CG
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          R_CUTOFF 5.0
          TYPE DFTD3
          PARAMETER_FILE_NAME /home/lujunbo/bin/cp2k/cp2k-6.1.0/data/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      A  10.0  0.0  0.0
      B  0.0  10.0  0.0
      C  0.0  0.0  10.0
      PERIODIC XYZ
    &END CELL
    &COORD
  C         0.0       0.0        0.0
  O         0.0       0.0       -1.16
  O         0.0       0.0        1.16
    &END COORD
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND C
      BASIS_SET DZVP-MOLOPT-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
