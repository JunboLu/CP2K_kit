&GLOBAL
  PROJECT test
  RUN_TYPE MD
  PRINT_LEVEL low
&END GLOBAL

&MOTION
  &MD  
    ENSEMBLE NVT
    STEPS  3000
    TIMESTEP 0.5
    TEMPERATURE 50
    &THERMOSTAT
      TYPE  NOSE
      REGION  GLOBAL
      &NOSE
        LENGTH  3
        TIMECON  [fs]  50
      &END NOSE
    &END THERMOSTAT
  &END MD

  &FREE_ENERGY
    &METADYN
      USE_PLUMED .TRUE.
      PLUMED_INPUT_FILE ./plumed.dat
    &END METADYN
  &END FREE_ENERGY

  &PRINT
     &TRAJECTORY  
       &EACH
         MD               1
       &END EACH
     &END TRAJECTORY
     &VELOCITIES  
       &EACH
         MD               1
       &END EACH
     &END VELOCITIES
     &FORCES
       &EACH
         MD               1
       &END EACH
     &END FORCES
    &CELL
      &EACH
        MD 1
      &END EACH
    &END CELL
     &RESTART  
       &EACH
         MD               5
       &END EACH
     &END RESTART
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME /home/lujunbo/bin/cp2k-8.2/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /home/lujunbo/bin/cp2k-8.2/data/POTENTIAL
    WFN_RESTART_FILE_NAME ./cp2k-RESTART.wfn
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
      CUTOFF 400
      NGRIDS 4
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
      EXTRAPOLATION ASPC
    &END QS
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      MAX_SCF 100
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      CHOLESKY INVERSE_DBCSR
      &OUTER_SCF
        MAX_SCF 6
        EPS_SCF 1.0E-6
      &END OUTER_SCF
      &OT
        MINIMIZER CG
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC [angstrom] 10.0000   10.0000   10.0000
      PERIODIC XYZ
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME init.xyz
      COORD_FILE_FORMAT xyz
    &END TOPOLOGY

    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
     BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

