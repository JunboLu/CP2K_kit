&global
  run_type analyze
  analyze_job power_spectrum
&end global

&analyze
  &power_spectrum
    type water_mode
    traj_vel_file ./cp2k-vel-1.xyz
    traj_pos_file ./cp2k-pos-1.xyz
    init_step 0 
    end_step 13558
    atom_id 1-3
    max_frame_corr 3000
    normalize 1
    start_wave 0
    end_wave 4000
    increment_wave 1
  &end power_spectrum
&end analyze
