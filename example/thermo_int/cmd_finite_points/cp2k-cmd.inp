&GLOBAL
  PROJECT CONSTRAINT_MD
  RUN_TYPE MD
  PRINT_LEVEL low
&END GLOBAL

&MOTION
  &MD  
    ENSEMBLE NVT
     STEPS 100
    TIMESTEP 0.5
    TEMPERATURE 300
    &THERMOSTAT
      TYPE  NOSE
      REGION  GLOBAL
      &NOSE
        LENGTH  3
        TIMECON  [fs]  50
      &END NOSE
    &END THERMOSTAT
  &END MD
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      INTERMOLECULAR T
      TARGET [angstrom] 2.000000
    &END COLLECTIVE
     &LAGRANGE_MULTIPLIERS  SILENT
       COMMON_ITERATION_LEVELS  1
     &END LAGRANGE_MULTIPLIERS
  &END CONSTRAINT
  &PRINT
     &TRAJECTORY
       &EACH
         MD               1
       &END EACH
     &END TRAJECTORY
     &VELOCITIES 
       &EACH
         MD               1
       &END EACH
     &END VELOCITIES
     &FORCES
       &EACH
         MD               1
       &END EACH
     &END FORCES
     &STRUCTURE_DATA
       &EACH
         MD              1
       &END EACH
       DISTANCE 4 1
       DISTANCE 6 1
     &END STRUCTURE_DATA
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
     CHARGE -1
     BASIS_SET_FILE_NAME /home/lujunbo/bin/cp2k-8.2/data/BASIS_MOLOPT
     POTENTIAL_FILE_NAME /home/lujunbo/bin/cp2k-8.2/data/GTH_POTENTIALS
    &POISSON
      PERIODIC none
      POISSON_SOLVER wavelet
    &END POISSON
    &MGRID
      CUTOFF 400
      NGRIDS 4
      REL_CUTOFF 40
    &END MGRID
    &QS
      EXTRAPOLATION ASPC
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS RESTART
      CHOLESKY INVERSE_DBCSR
       &OT
         PRECONDITIONER FULL_ALL
         MINIMIZER  CG
         LINESEARCH  2PNT
       &END OT
       &OUTER_SCF
         EPS_SCF 1.0E-6
         MAX_SCF 5
       &END OUTER_SCF
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 15.0000   15.0000   15.0000
      PERIODIC none
    &END CELL

    &TOPOLOGY
     COORD_FILE_NAME ./ch3cl2.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY

    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
     BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND Cl
     BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
    &COLVAR
      &COMBINE_COLVAR
        FUNCTION D2-D1
        VARIABLES D1 D2
        &COLVAR
          &DISTANCE
            ATOMS 4 1
          &END DISTANCE
        &END COLVAR
        &COLVAR
          &DISTANCE
            ATOMS 6 1
          &END DISTANCE
        &END COLVAR
      &END COMBINE_COLVAR
    &END COLVAR
  &END SUBSYS
&END FORCE_EVAL

